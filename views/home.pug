html
    head
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        title= "Home"
        style 
            include ../public/styles/hamburguesa.css
            include ../public/styles/home.css    
        script(src="./scripts/home.js")
    body
        include ./header.pug
        main
            div(id= "root")
                div
                    input(
                        name="search"
                        type="text"
                        id="buscar"
                        placeholder="Oferta")
                    button(
                        type="submit"
                        value="home") Buscar
                each _offert in data
                    a(href= _offert.url)
                        div
                            h3 Titulo: #{_offert.title}
                                a(id="favoriteIcon" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css") 
                                    i.fas.fa-star
                            p Salario: #{_offert.salary} 
                            p Empresa: #{_offert.company} 
                            p Descripci√≥n oferta: #{_offert.description} 
