doctype html
html
    head
        title= "DashBoard"
        style 
            include ../public/styles/normalize.css
            include ../public/styles/general.css
            include ../public/styles/dashboard.css
            
        script( src="/scripts/dashboard.js")
    body
        include ./header.pug
        main   
            div(id="root")
                h2  Current offers
                div(id="offers")
                    each _offert in _offerts
                        div(class="eachOffer")
                            a(href=_offert.url)
                                div 
                                    h3 #{_offert.title}
                                    p Company: #{_offert.company}
                                    p Salary: #{_offert.salary}
                            div
                                input(id="editIcon" class="icon" type="image" src="https://www.pngfind.com/pngs/m/77-776933_computer-icons-pencil-editing-download-icon-design-edit.png")
                                input(id="deleteIcon" class="icon" type="image" src="https://library.kissclipart.com/20190905/yuq/kissclipart-can-icon-delete-icon-remove-icon-db41fa2db93fe7e0.png")
                                    //- button(type="button" class="edit" onClick=nombreDeLaFuncion) Editar
                                    //- button(type="button" class="delete" onClick=nombreDeLaFuncion) Borrar   
                div 
                    button(id="newOffer_Button" onClick="newOffert()") Create new offer
    include ./footer.pug