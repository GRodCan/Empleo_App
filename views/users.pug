doctype html
html
    head
        title= "Users"
        style 
            include ../public/styles/hamburguesa.css
    body
        include ./header.pug
        div
            each user in users
                a(href="#")
                    div
                        h3 Nombre #{user.name}
                        p Email #{user.email}
                        p Contrase√±a #{user.password}
                        p Administrador #{user.admin}
                        p Fecha de alta #{user.date}
                        p Avatar #{user.image}
                        button(type="button" class="edit" onClick=funcionEditar) Editar Usuario
                        button(type="button" class="delete" onClick=funcionEliminar) Eliminar Usuario 
            a(href="signup"): button Crear usuario 
        
        include ./footer.pug

